{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Python Debugger: app.main (module)",
			"type": "debugpy",
			"request": "launch",
			"module": "app.main",
			"console": "integratedTerminal"
		},

		{
			"name": "Python Debugger: Uvicorn (FastAPI)",
			"type": "debugpy",
			"request": "launch",
			"module": "uvicorn",
			"args": [
				"app.main:asgi_app",
				"--host",
				"0.0.0.0",
				"--port",
				"7701"
			],
			"console": "integratedTerminal"
		},

		{
			"name": "Browser: Chrome → /test.html",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:7701/test.html",
			"webRoot": "${workspaceFolder}"
		},

		{
			"name": "Browser: Chrome → /client_sample_usage_stt_and_tts.html",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:7701/sdk/client_sample_usage_stt_and_tts.html",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [

		{
			"name": "Run Server + Browser (AGENT SERVER TEST)",
			"configurations": [
				"Python Debugger: Uvicorn (FastAPI)",
				"Browser: Chrome → /test.html"
			],
			"stopAll": true
		},

		{
			"name": "Run Server + Browser (CLIENT SDK TEST)",
			"configurations": [
				"Python Debugger: Uvicorn (FastAPI)",
				"Browser: Chrome → /client_sample_usage_stt_and_tts.html"
			],
			"stopAll": true
		}		
	]
}
